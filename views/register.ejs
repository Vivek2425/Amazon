              $("#myfrm").on("submit",async function(e){
                e.preventDefault();

                const formData = $(this).serialize();
                console.log(formData)
                console.log(formData)
                $.ajax({
                url: "/register",
                type: "POST",
                data: formData,
                success:async function(response) {
                  if(response!==null && response!=="null"){
                    location.href="/";
                  }else{
                    $("#showalert").removeClass("d-none");
                    // alert("Login unsuccessfull..!!")
                  }
                }
              });
                         
                 
                    
              })

            
            })
           
